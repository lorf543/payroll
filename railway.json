{
  "$schema": "https://railway.app/railway.schema.json",
  "nixpacksPlan": {
    "phases": {
      "setup": {
        "nixPkgs": ["python311"]
      }
    }
  },
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE"
  },
    "services": [
        {
        "name": "web",
        "startCommand": "gunicorn payroll.wsgi:application --bind 0.0.0.0:$PORT --workers 3 --threads 2 --timeout 120",
        "restartPolicyType": "ALWAYS",
        "healthCheckPath": "/",
        "healthCheckTimeout": 300
        },
        {
        "name": "worker", 
        "startCommand": "python manage.py qcluster",
        "restartPolicyType": "ALWAYS"
        }
    ]
}